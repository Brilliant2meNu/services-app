  <script>
    const chatOutput = document.getElementById('chatOutput');
    const chatInput = document.getElementById('chatInput');
    const sendButton = document.getElementById('sendButton');
    const voiceButton = document.getElementById('voiceButton');
    const priorityMessageButton = document.getElementById('submitPriorityMessage');

    let recognition;

    // Initialize Voice Recognition
    function startVoiceRecognition() {
      if (!recognition) {
        recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
        recognition.lang = 'en-US';

        recognition.onresult = (event) => {
          const transcript = event.results[0][0].transcript;
          chatInput.value = transcript;
          handleSendMessage(transcript);
        };

        recognition.onerror = (event) => {
          alert("Microphone access is required for voice input!");
        };
      }
      recognition.start();
    }

    // Speak Text Using Speech Synthesis
    function speakText(text) {
      const speech = new SpeechSynthesisUtterance(text);
      speech.lang = 'en-US';
      speech.pitch = 1;
      speech.rate = 1;
      speech.volume = 1;

      window.speechSynthesis.speak(speech);
    }

    // Handle Sending Messages
    async function handleSendMessage(userMessage) {
      addMessage("You", userMessage);
      const botResponse = await fetchBackendGPTResponse(userMessage);
      addMessage("Assistant", botResponse);
      speakText(botResponse);
      chatInput.value = '';
    }

    // Send Button Event Listener
    sendButton.addEventListener('click', async () => {
      const userMessage = chatInput.value.trim();
      if (!userMessage) {
        alert("Please enter a message!");
        return;
      }
      handleSendMessage(userMessage);
    });

    // Voice Button Event Listener
    voiceButton.addEventListener('click', () => {
      startVoiceRecognition();
    });

    // Add Messages to the Chat Output
    function addMessage(sender, message) {
      const messageElement = document.createElement('div');
      messageElement.innerHTML = `<strong>${sender}:</strong> ${message}`;
      chatOutput.appendChild(messageElement);
      chatOutput.scrollTop = chatOutput.scrollHeight;
    }

    // Handle Priority Contact Message
    priorityMessageButton.addEventListener('click', () => {
      const message = document.getElementById('priorityMessage').value;
      if (message.trim()) {
        alert("Your message has been sent to our staff!");
        document.getElementById('priorityMessage').value = '';
      } else {
        alert("Please type a message before submitting.");
      }
    });

    // Fetch Backend GPT Response
    async function fetchBackendGPTResponse(message) {
      try {
        const response = await fetch('/api/chat', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ message, limitSentences: true, avoidTechTalk: true }),
        });

        if (!response.ok) {
          throw new Error("Failed to fetch response from the server.");
        }

        const data = await response.json();
        return data.reply;
      } catch (error) {
        console.error(error);
        return "Sorry, something went wrong!";
      }
    }
  </script>
